@using PetsHotel.webapp.Helpers;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PetsHotel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Główna", "Index", "Home")</li>
                    <li>@Html.ActionLink("Informacje", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li style="float:right">@Html.ActionLink("Dodaj ogłoszenie", "AddAnimal", "Animal", new { @class = "btn btn-primary", type = "button" })</li>

                    @if (Html.IdentityExtension() == null)
                    {
                        <li style="float:right">@Html.ActionLink("Zaloguj się", "SignIn", "Account")</li>
                    }
                    else
                    {
                        <li style="float:right">
                            <button class="btn btn-primary" type="button" id="menu1" data-toggle="dropdown">
                                Witaj, @Html.IdentityExtension().UserName
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                                <li role="presentation">@Html.ActionLink("Dane Konta", "Edit", "UserData", new { id = @Html.IdentityExtension().LoginId }, null)</li>
                                @if (Html.RoleExtension().IsAdmin)
                                {
                                    <li role="presentation">@Html.ActionLink("Lista użytkowników", "List", "UserData")</li>
                                }
                                <li role="presentation">@Html.ActionLink("Dodaj zwierzaka", "AddAnimal", "Animal")</li>
                                <li role="presentation">@Html.ActionLink("Lista moich zwierzaków", "MyAnimalsList", "Animal", new { id = @Html.IdentityExtension().UserId }, null)</li>
                                <li role="presentation" class="divider"></li>
                                <li role="presentation">@Html.ActionLink("Wyloguj", "LogOut", "Account")</li>
                            </ul>
                        </li>
                    }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Moja aplikacja ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
