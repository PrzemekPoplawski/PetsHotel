@using PetsHotel.webapp.Helpers;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://code.iconify.design/1/1.0.4/iconify.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("HOME", "Index", "Home",null, new { @class = "btn btn-success", type = "button" })</li>
                    <li>@Html.ActionLink("INFORMACJE", "About", "Home",null, new { @class = "btn btn-success", type = "button" })</li>
                    <li>@Html.ActionLink("KONTAKT", "Contact", "Home",null, new { @class = "btn btn-success", type = "button" })</li>
                    <li>@Html.ActionLink("Dodaj ogłoszenie", "AddAdvertisement","Advertisement",null, new { @class = "btn btn-success", type = "button" })</li>

                </ul>
            </div>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    @if (Html.IdentityExtension() == null)
                    {
                        <li>@Html.ActionLink("ZALOGUJ SIĘ", "SignIn", "Account")</li>
                    }
                    else
                    {
                        <li>
                            <button class="btn btn-success" type="button" id="menu1" data-toggle="dropdown">
                                Witaj, @Html.IdentityExtension().UserName
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                                <li role="presentation">@Html.ActionLink("Dane Konta", "Edit", "UserData", new { id = @Html.IdentityExtension().LoginId }, null)</li>
                                @if (Html.RoleExtension().IsAdmin)
                                {
                                    <li role="presentation">@Html.ActionLink("Lista użytkowników", "List", "UserData")</li>
                                }
                                <li role="presentation">@Html.ActionLink("Dodaj zwierzaka", "AddAnimal", "Animal")</li>
                                <li role="presentation">@Html.ActionLink("Lista moich zwierzaków", "MyAnimalsList", "Animal", new { id = @Html.IdentityExtension().UserId }, null)</li>
                                <li role="presentation" class="divider"></li>
                                <li role="presentation">@Html.ActionLink("Wyloguj", "LogOut", "Account")</li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    }



    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Moja aplikacja ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <div>
        @*@Html.Partial("~/Views/Advertisement/AddAdvertisement.cshtml")*@
        @*@Html.WindowFactory().Window().Title("Dodaj ogłoszenie")*@
    </div>

</body>
</html>
