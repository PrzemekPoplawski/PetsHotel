@using PetsHotel.webapp.Helpers;
@model PetsHotel.webapp.ViewModels.UserData.EditViewModel



@{
    ViewBag.Title = "UsersData";
}

<!DOCTYPE html>
@using (Html.BeginForm("Edit", "UserData", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Wypełnij swoje dane</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <input type="hidden" id="PersonId" name="PersonId" value="@Model.PersonId" />
    <div class="row">
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.Login, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.PhoneNumber, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 form-group">
                @Html.LabelFor(model => model.SexCode, new { @class = "col-sm-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(p => p.SexCode, Model.SexOptions, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 form-group">
            @Html.LabelFor(model => model.Address, new { @class = "col-sm-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control" })
            </div>
        </div>
        @if (Html.RoleExtension().IsAdmin)
        {
            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.LabelFor(model => model.Role, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.Role, Model.Roles, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4 form-group">
            <div class="form-group" style="float:right">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-primary mb-2" />
                </div><br />
            </div>
        </div>
    </div>

}
